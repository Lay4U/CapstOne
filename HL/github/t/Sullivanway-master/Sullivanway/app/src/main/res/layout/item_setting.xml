<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_setting_margin">

    <TextView
        android:id="@+id/stnNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_setting_margin"
        android:layout_centerVertical="true"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/startLineSym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_setting_margin"
        android:layout_marginEnd="@dimen/item_setting_margin"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/endLineSym" />

    <ImageView
        android:id="@+id/endLineSym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_setting_margin"
        android:layout_marginEnd="@dimen/item_setting_margin"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/transStnCheckBox" />

    <CheckBox
        android:id="@+id/transStnCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/item_setting_margin"
        android:layout_marginEnd="@dimen/item_setting_margin"
        android:layout_alignParentEnd="true" />
</RelativeLayout>