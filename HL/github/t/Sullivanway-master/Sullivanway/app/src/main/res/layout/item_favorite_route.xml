<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/favoriteImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/fav_margin"
        android:contentDescription="@string/favorite_route"
        android:tint="@color/favoriteTint" />

    <TextView
        android:id="@+id/stnNms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fav_margin"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/favoriteImg"
        android:textSize="@dimen/fav_text_size" />

    <ImageView
        android:id="@+id/deleteImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fav_margin"
        android:layout_marginRight="@dimen/fav_margin"
        android:layout_alignTop="@+id/stnNms"
        android:layout_alignEnd="@+id/stnNms"
        app:srcCompat="@drawable/ic_close_red_24dp"
        android:contentDescription="@string/delete" />

</RelativeLayout>